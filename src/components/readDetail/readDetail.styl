.content-wrapper   
    padding: 20px 15px
    margin-top: 30px
  .detail-title
    color: #000;
    font-size: 18px;
    margin: 30px 0 0 0;
    font-weight: bold;
    line-height: 1.3;
  .sort-separate-line
    border: 2px solid #000;
    margin: 7px 0 15px 0;
    width: 70px;
  .detail-content
    margin-top: 25px
    line-height: 30px
    color: #444343
    overflow hidden
  .author_detail
    margin: 25px 0
    position: relative
    img 
      width: 70px
      height: 70px
      margin-top: 20px
      border-radius: 50%
    .name, .desc
      position: absolute
      padding-left: 15px
      padding-top: 10px
      font-size: 14px
    .name
      display: inline-block
      top: 50px
      color: #797979
    .desc
      top: 70px
      color: #a7a5a5
  .essay_list
    li
      border-bottom: 1px solid #ccc
      padding-bottom: 20px
      padding-top: 20px
      .essay_container
        font-size: 12px
        overflow: hidden
        .essay_header
          width: 14px
          height: 14px
          margin-top: 0
          border-radius: 50%
        .essay_username
          color: #9e9c9c
          margin-left: 10px
        .essay_time
          float: right
          color: #9e9c9c
      .essay_content
        font-size: 12px
        color: #666
        padding-top: 10px
        line-height: 30px
