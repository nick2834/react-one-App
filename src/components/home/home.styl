  .home-draw
    postion: relative
    text-align: center
    .time
      display: inline-block
      font-size: 23px
      font-family: cursive
      font-weight: 100
      color: #5d5a5a
    .vol
      display: block
      padding: 10px
      font-size: 12px
      font-weight: 100
      color: #9e9c9c
